
<h1 class="blueNeon"><%= article.title %></h1>
<div class="publish_date"><%= article.published_at.strftime('%B %d, %Y') %></div>
<div class="author"><%= article.author %></div>
<div class="blogBody">
  <% unless article.image_url.blank? %>
  <div class="blogImage">
    <%= image_tag image_path(article.image_url), :class => "blogImage" %>
  </div>
  <% end %>
  <%= article.body %>
</div>
